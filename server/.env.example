# Server environment variables (.env)
# Copy this to server/.env and adjust values for your environment.

# Core
PORT=4000
# Single origin permitted for CORS (exact origin recommended)
# Example: http://localhost:3000 or https://shop.example.com
CORS_ORIGIN=http://localhost:3000

# Storage backend: json | sequelize | postgres
STORAGE_DRIVER=json
# JSON driver data directory
DATA_DIR=./data
# Uploads configuration
UPLOAD_DIR=./uploads
UPLOAD_MAX_FILE_SIZE=5242880
# Comma-separated mime types, e.g. image/png,image/jpeg or image/*
UPLOAD_ALLOWED_MIME=image/*

# Auth
# NEVER commit real secrets. Use a strong random value in production.
JWT_SECRET=change_me_in_production
# Seconds or time span string (e.g., 3600, 1h, 7d)
JWT_EXPIRES_IN=3600
# Development helper: allow "mock" tokens (true/false)
ALLOW_MOCK_TOKENS=false
# Admin seeding for first run (change in production)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# PostgreSQL (required if STORAGE_DRIVER=sequelize or postgres)
# Connection string: postgres://user:password@host:5432/dbname
DATABASE_URL=
# Sequelize SQL logging (true/false)
SEQUELIZE_LOGGING=false

# Public origin (used in payment redirects, emails, links)
PUBLIC_ORIGIN=http://localhost:3000

# Stripe (server-side secrets)
# Secret key (sk_test_...)
STRIPE_SECRET_KEY=
# Webhook signing secret (whsec_...)
STRIPE_WEBHOOK_SECRET=
