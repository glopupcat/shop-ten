# Frontend environment variables
# Copy this file to .env.local (not committed) and adjust values as needed.

# Backend origin used by Next.js rewrites. When set, all /api/* and /uploads/*
# requests from the frontend will proxy to this origin.
NEXT_PUBLIC_API_ORIGIN=http://localhost:4000

# Port for Next.js dev server (npm run dev). Defaults to 3000 if unset.
PORT=3000

# Allow cross-origin dev previews (comma-separated origins). Useful for Builder.io preview domains.
NEXT_PUBLIC_ALLOWED_DEV_ORIGINS=http://localhost:3000

# Optional: toggle Next.js telemetry off locally
NEXT_TELEMETRY_DISABLED=1
