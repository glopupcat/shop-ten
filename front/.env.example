# Frontend environment variables (copy to .env.local)

# Backend origin used by Next.js rewrites for /api and /uploads
NEXT_PUBLIC_API_ORIGIN=http://localhost:4000

# Frontend dev server port (next dev)
PORT=3000

# Comma-separated dev origins allowed (e.g., external preview domains)
NEXT_PUBLIC_ALLOWED_DEV_ORIGINS=http://localhost:3000

# Optional: disable Next.js telemetry locally
NEXT_TELEMETRY_DISABLED=1
